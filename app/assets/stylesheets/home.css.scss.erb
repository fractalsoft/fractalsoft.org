@import 'variables';

@mixin cover-image($path, $params: no-repeat center center fixed) {
  background: url($path) $params;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

body.home {
  background-color: $white-background-color;
  color: $grey-text-color;

  .header {
    margin-bottom: 0;
  }

  .container-fluid {
    padding: 0;

    .row {
      margin: 0;
    }
  }

  .btn {
    padding: 15px 50px 15px 50px;
    text-transform: uppercase;

    &.btn-default {
      background-color: transparent;
      color: $grey-text-color;
      border-width: 3px;
    }

    &.btn-info {
      background-color: $dark-background-color;
      color: $white-text-color;
      border-width: 0px;
    }

    &.btn-primary {
      background-color: $red-background-color;
      color: $white-text-color;
      border-width: 0px;
    }
  }

  .jumbotron {
    background-color: $red-background-color;
    height: 540px;
    padding-top: 0;
    margin-bottom: 0;

    .carousel {
      height: 510px;

      .carousel-control {
        background-image: none;
      }

      .carousel-caption {
        text-shadow: none;
        position: relative;
        left: 0;
        bottom: 0;
        right: 0;

        h3 {
          margin-top: 140px;
          font-size: 40pt;
        }

        .btn {
          margin-top: 30px;
        }
      }
    }
  }

  .description {
    background-color: $light-background-color;
    margin-top: -30px;
    padding-bottom: 120px;

    h1 {
      text-transform: uppercase;
      font-weight: 700;
      text-align: center;
      margin-top: 100px;
      margin-bottom: 100px;
    }

    h4 {
      font-weight: 700;
      text-align: center;
      margin-top: 30px;
      margin-bottom: 30px;
    }

    p {
      text-align: center;
    }

    .thumb {
      width: 40px;
      margin: 0 auto;
    }

    .screen {
      width: 80px;
    }
  }

  .images {
    max-height: 360px;
    overflow: hidden;

    .thumbnail {
      padding: 0;
      border: none;
    }

    .col-xs-3 {
      padding: 0;
    }
  }

  .technology {
    background-color: $light-background-color;
    padding-top: 100px;
    padding-bottom: 100px;
    text-align: center;

    .text-left {
      text-align: left;
      padding-left: 75px;
    }

    .text-right {
      text-align: right;
      padding-right: 75px;
    }

    .media-list {
      margin-top: 100px;

      .media-body {
        h4 {
          font-size: 25pt;
          font-weight: 700;
          padding-bottom: 30px;
          padding-top: 30px;
        }
      }
    }
  }

  .team {
    text-align: center;
    padding-bottom: 100px;

    h2 {
      padding-top: 60px;
      padding-bottom: 60px;
      text-transform: uppercase;
      font-weight: 700;
    }

    .thumbnail {
      padding: 30px;
      padding-bottom: 0;
      color: $grey-text-color;

      &:hover {
        text-decoration: none;
        color: $red-background-color;
        border-color: $red-background-color;
      }

      h3 {
        font-size: 12pt;
        padding-top: 25px;
        padding-bottom: 25px;
        margin: 0;
      }
    }

    .btn {
      margin-top: 50px;
    }
  }

  .opinions {
    .cover {
      height: 470px;
      @include cover-image('<%= asset_path('home/opinions.jpg') %>');

      .carousel-caption {
        z-index: 0;
        position: relative;
        left: 0;
        bottom: 0;
        right: 0;

        img {
          margin-top: 80px;
          margin-bottom: 30px;
          width: 140px;
          height: 140px;
        }

        p strong {
          font-size: 20pt;
          font-weight: 700;
        }
      }
    }
  }

  .contact {
    h2 {
      padding-top: 60px;
      text-transform: uppercase;
      font-weight: 700;
    }

    h2, p {
      text-align: center;
    }

    p {
      margin-bottom: 70px;
    }

    h4 {
      text-transform: uppercase;
      font-weight: 700;
      font-size: 12pt;
    }

    .section {
      margin-bottom: 65px;

      &.address h4 {
        margin-bottom: 40px;
      }
    }

    #contact_form {
      margin-top: 60px;

      .form-group {
        .col-xs-5 {
          padding-left: 0;
        }
      }
    }
  }
}
