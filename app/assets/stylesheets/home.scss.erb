@import 'variables';
@import 'mixins';

body.home {
  background-color: $white-background-color;
  color: $grey-text-color;

  .carousel-caption {
    z-index: 0;
    position: relative;
    left: 0;
    bottom: 0;
    right: 0;
  }

  .header { margin-bottom: 0; }

  .container-fluid {
    padding: 0;

    .row { margin: 0; }
  }

  @media(min-width: 768px) {
    .jumbotron h3 {
      margin-top: 140px;
      font-size: 40pt;
    }

    .contact {
      h2 { padding-top: 60px; }
    }
  }

  @media(max-width: 768px) {
    .jumbotron h3 {
      margin-top: 80px;
      font-size: 30pt;
    }

    .description {
      h4 { font-size: 18pt; }
    }

    .images {
      .col-xs-12 { padding: 0; }
    }

    .contact {
      h2 { padding-top: 0; }
      .section { text-align: center; }
    }
  }

  .jumbotron {
    background-color: $red-background-color;
    height: 540px;
    margin-bottom: 0;
    padding-top: 0;
    border-radius: 0;

    .carousel {
      height: 510px;

      .carousel-control { background-image: none; }

      .carousel-caption {
        text-shadow: none;

        .btn { margin-top: 30px; }
      }
    }
  }

  .description {
    background-color: $light-background-color;
    margin-top: -60px;
    padding-bottom: 120px;

    h1, h4 {
      font-weight: 700;
      text-align: center;
    }

    h1 {
      text-transform: uppercase;
      @include vertical-margin(100px);
    }

    h4 { @include vertical-margin(10px); }

    p {
      font-size: 10pt;
      text-align: center;
    }

    .thumb {
      margin: 0 auto;
      width: 40px;
    }

    .pen { padding-top: 8px; }
    .screen { width: 80px; }
  }

  .images {
    max-height: 360px;
    overflow: hidden;

    .thumbnail {
      padding: 0;
      border: none;
    }

    .col-xs-2 {
      padding: 0;
      margin-bottom: -20px;
    }
  }

  .technology {
    background-color: $light-background-color;
    @include vertical-padding(20px);
    text-align: center;

    .btn.btn-default {
      background-color: transparent;
    }

    .text-left {
      padding-left: 75px;
      text-align: left;
    }

    .text-right {
      padding-right: 75px;
      text-align: right;
    }

    .media-list {
      margin-top: 50px;

      .media-body {
        h4 {
          font-size: 25pt;
          font-weight: 700;
          margin-bottom: 0;
          padding-bottom: 25px;
          padding-top: 30px;
        }

        p {
          font-size: 10pt;
          line-height: 1.8;
        }
      }
    }
  }

  .opinions {
    .cover {
      height: 470px;
      @include cover-image('<%= asset_path('home/opinions.jpg') %>');

      .carousel-caption {
        img {
          margin-bottom: 30px;
          margin-top: 80px;
          height: 140px;
          width: 140px;
        }

        p {
          font-family: $asap-fonts;

          strong {
            font-size: 20pt;
            font-weight: 700;
          }
        }
      }
    }
  }
}
