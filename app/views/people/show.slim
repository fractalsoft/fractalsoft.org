- content_for :body_class, 'person'

.container-fluid.background
.container.business-card
  .row.mb-5
    .col-md-3.col-sm-6.col-xs-12
      = @person.image
    .col-md-6.col-sm-6.col-xs-12
      h1
        = @person.fullname
      p.text-justify
        = @person.introduction
      = @person.saying
    .col-md-3.col-sm-6.col-xs-12
      ul.list-inline.social
        = @person.blog
        = @person.github
        = @person.twitter
        = @person.linkedin
        / #= @person.facebook
        = @person.instagram
        = @person.vimeo
        = @person.website
      = @person.skills

  .row
    = render 'technologies', category: :backend, person: @person
    = render 'technologies', category: :database, person: @person
    = render 'technologies', category: :frontend, person: @person
    = render 'technologies', category: :web, person: @person
    = render 'technologies', category: :testing, person: @person
    = render 'technologies', category: :tool, person: @person
    = render 'technologies', category: :gamedev, person: @person
    = render 'technologies', category: :mobile, person: @person
    = render 'technologies', category: :search_engine, person: @person
    = render 'technologies', category: :os, person: @person
    = render 'technologies', category: :cloud_computing, person: @person
    = render 'technologies', category: :mathematical_software, person: @person

  hr
  - @person.projects.each do |project|
    = render 'project', project: project, contributions: @person.project_with_contributions(project)
