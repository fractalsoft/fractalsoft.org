<% content_for :body_class, 'team' %>

<div class='container team'>
  <h2>Meet our team!</h2>
  <div class='row'>
    <div class='col-md-10 col-md-offset-1'>
      <% @people.each_with_index do |person, index| %>
        <% if index % 2 == 0 %>
          <div class='media'>
            <a class='media-left' href='#'>
              <%= image_tag person.image_url %>
            </a>
            <div class='media-body'>
              <h4 class='media-heading'>
                <%= person.fullname %> - <span><%= person.position %></span>
              </h4>
              <%= person.description %>
              <div class='media-footer'>
                <span class='website pull-left'>
                  <%= link_to person.website, person.website %>
                </span>
                <ul class='list-inline pull-right'>
                  <li>
                    <%= link_to person.facebook do %>
                      <%= image_tag 'home/facebook_icon.png' %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to person.twitter do %>
                      <%= image_tag 'home/twitter_icon.png' %>
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        <% else %>
          <div class='media'>
            <div class='media-body media-text-right'>
              <h4 class='media-heading'>
                <%= person.fullname %> - <span><%= person.position %></span>
              </h4>
              <%= person.description %>
              <div class='media-footer'>
                <span class='website pull-right'>
                  <%= link_to person.website, person.website %>
                </span>
                <ul class='list-inline pull-left'>
                  <li>
                    <%= link_to person.facebook do %>
                      <%= image_tag 'home/facebook_icon.png' %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to person.twitter do %>
                      <%= image_tag 'home/twitter_icon.png' %>
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>
            <a class='media-right' href='#'>
              <%= image_tag person.image_url %>
            </a>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
