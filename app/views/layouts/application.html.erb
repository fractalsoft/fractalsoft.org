  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <%= display_meta_tags(default_meta_tags) %>
  <meta name='revisit-after' content='1 days' />
  <meta name='robots' content='index,follow' />
  <meta name='robots' content='noarchive' />
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <meta name='theme-color' content='#C3261C' />
  <link href='<%= manifest_path %>' rel='manifest' />
  <!-- <base href='http://fractalsoft.org/' /> -->
  <%= favicon_link_tag 'favicon.ico', skip_pipeline: true %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload', async: Rails.env.production? %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload', async: Rails.env.production? %>
  <%= render 'layouts/shared/analytics' %>
  <%= render 'layouts/shared/hotjar' %>
  <%= csrf_meta_tags unless @page_caching %>
</head>
<body class='<%= yield(:body_class) %>'>
<%= query_diet_widget if Rails.env.development? %>
