<%= form_for contact_form, html: { id: 'contact_form', class: 'form-horizontal' } do |f| %>
  <div class='form-group'>
    <%= f.text_field :name, class: 'form-control', placeholder: t('.name'), required: true %>
  </div>
  <div class='form-group'>
    <%= f.email_field :email, class: 'form-control', placeholder: t('.email'), required: true %>
  </div>
  <div class='form-group'>
    <%=  f.text_area :message, class: 'form-control', rows: 10, placeholder: t('.message'), required: true %>
  </div>
  <div class='form-group'>
    <div class='row'>
      <div class='col-sm-5 col-xs-12'>
        <%= f.submit t('.send'), class: 'btn btn-primary btn-block submit' %>
      </div>
    </div>
  </div>
<% end %>
