<%= form_for contact, html: { id: 'contact_form', class: 'form-horizontal' } do |f| %>
  <div class='form-group'>
    <%= f.text_field :name, class: 'form-control', placeholder: 'your name' %>
  </div>
  <div class='form-group'>
    <%= f.text_field :email, class: 'form-control', placeholder: 'your email address' %>
  </div>
  <div class='form-group'>
    <%=  f.text_area :message, class: 'form-control', rows: 10, placeholder: 'what we can do for you?' %>
  </div>
  <div class='form-group'>
    <div class='row'>
      <div class='col-sm-5 col-xs-12'>
        <%= f.submit 'send', class: 'btn btn-primary btn-block submit' %>
      </div>
    </div>
  </div>
<% end %>
