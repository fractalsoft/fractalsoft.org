<% content_for :body_class, 'project' %>

<div class='container project'>
  <div class='header-img' style='background-image: url(<%= asset_path(@project.images.top.image_url) %>)'>
    <div class='logo'>
      <%= image_tag @project.images.logo.image_url %>
    </div>
  </div>
  <div class='row'>
    <div class='col-sm-offset-2 col-sm-8'>
      <p><%= @project.description %></p>
      <%= link_to @project.url, @project.url %>
    </div>
  </div>
  <div class='images'>
    <div class='row'>
      <%= image_tag @project.images.pc.image_url, class: 'pull-right' %>
    </div>
    <% @project.images.pages.each do |image| %>
      <div class='row'>
        <div class='col-sm-offset-2 col-sm-8'>
          <%= image_tag image.image_url %>
        </div>
      </div>
    <% end %>
  </div>
  <div class='logo'>
    <%= image_tag @project.images.logo.image_url %>
    <span><%= @project.year %></span>
  </div>
</div>
