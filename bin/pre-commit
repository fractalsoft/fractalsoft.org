#!/bin/sh

NONE='\033[0m'
RED='\033[0;31m'
WHITE='\033[1;37m'

coffeelint app/assets/javascripts
if [ $? -ne 0 ]; then
  echo "${WHITE}coffeelint ${RED}failed${NONE}"
  exit 1
fi

bundle exec rubocop --fail-fast
if [ $? -ne 0 ]; then
  echo "${WHITE}rubocop ${RED}failed${NONE}"
  exit 1
fi

bundle exec rails_best_practices --silent
if [ $? -ne 0 ]; then
  echo "${WHITE}rails_best_practices ${RED}failed${NONE}"
  exit 1
fi

bundle exec sandi_meter
if [ $? -ne 0 ]; then
  echo "${WHITE}sandi_meter ${RED}failed${NONE}"
  exit 1
fi
